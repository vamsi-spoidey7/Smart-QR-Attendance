<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vamsim.vnscollegeattendance.studentAttendance"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/userAttendanceList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center|center_horizontal|center_vertical"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="178dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/yearSpinner"
            android:layout_toRightOf="@+id/yearSpinner"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center|center_horizontal|center_vertical"
            android:spinnerMode="dialog" />


        <Spinner
            android:id="@+id/classspinner"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/teacherSpinner"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center|center_horizontal|center_vertical"
            android:spinnerMode="dialog"/>

        <Spinner
            android:id="@+id/teacherSpinner"
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center|center_horizontal|center_vertical"
            android:spinnerMode="dialog"/>

        <Button
            android:id="@+id/getAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Get Attendance"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />



    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userAttendanceList"
        android:layout_width="409dp"
        android:layout_height="424dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <TextView
        android:id="@+id/nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data Found"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>